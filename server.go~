package main

import(
	"html/template"
	"net/http"
)

type Page struct {
	Title    string
	Body     template.HTML
	UserData template.HTML
	Bar      template.HTML
}


func viewHandler(w http.ResponseWriter, r *http.Request) {
		

	t, _ := template.ParseFiles("index.html")
	t.Execute(w, r)
}

func mapHandler(w http.ResponseWriter, r *http.Request) {
		

	t, _ := template.ParseFiles("map.html")
	t.Execute(w, r)
}


func main(){
	http.HandleFunc("/", viewHandler)
	http.HandleFunc("/Shops", mapHandler)
http.ListenAndServe("localhost:8000",
nil)
 
}
